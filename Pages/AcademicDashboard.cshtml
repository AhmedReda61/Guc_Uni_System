@page
@model Guc_Uni_System.Pages.AcademicDashboardModel
@{
    ViewData["Title"] = "Academic Employee Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center my-3">
        <h2>Academic Employee Dashboard</h2>
        <form method="post" asp-page-handler="Logout">
            <button class="btn btn-danger">Logout</button>
        </form>
    </div>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }

    <div class="row mb-4">

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">Apply for Annual Leave</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ApplyAnnualLeave">
                        <div class="mb-2">
                            <label>Start Date</label>
                            <input type="date" asp-for="AnnualFrom" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>End Date</label>
                            <input type="date" asp-for="AnnualTo" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>Reason (Optional)</label>
                            <input type="text" asp-for="AnnualReason" class="form-control" />
                        </div>
                        <button class="btn btn-success w-100">Apply</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">View Performance</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ViewPerformance">
                        <div class="mb-2">
                            <label>Semester</label>
                            <input type="text" asp-for="PerformanceSemester" placeholder="e.g., S24, F25" class="form-control" required />
                        </div>
                        <button class="btn btn-primary w-100">View</button>
                    </form>

                    @if (Model.PerformanceResults.Count > 0)
                    {
                        <h6 class="mt-3">Results:</h6>
                        <table class="table table-sm table-bordered">
                            <thead><tr><th>ID</th><th>Rating</th><th>Comments</th></tr></thead>
                            <tbody>
                                @foreach (var p in Model.PerformanceResults)
                                {
                                    <tr>
                                        <td>@p.PerformanceId</td>
                                        <td>@p.Rating</td>
                                        <td>@p.Comments</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">View Attendance Deductions</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ViewDeductions">
                        <div class="mb-1">
                            <label>From Date</label>
                            <input type="date" asp-for="DeductionFrom" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>To Date</label>
                            <input type="date" asp-for="DeductionTo" class="form-control" required />
                        </div>
                        <button class="btn btn-warning w-100">Fetch Deductions</button>
                    </form>

                    @if (Model.DeductionResults.Count > 0)
                    {
                        <h6 class="mt-3">Results:</h6>
                        <table class="table table-sm table-bordered">
                            <thead><tr><th>Date</th><th>Amount</th><th>Type</th></tr></thead>
                            <tbody>
                                @foreach (var d in Model.DeductionResults)
                                {
                                    <tr>
                                        <td>@d.Date.ToShortDateString()</td>
                                        <td>@d.Amount</td>
                                        <td>@d.Type</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-info text-white">Current Month Attendance Records</div>
                <div class="card-body">
                    @if (Model.AttendanceRecords.Count == 0)
                    {
                        <p class="text-muted">No attendance records found for the current month.</p>
                    }
                    else
                    {
                        <table class="table table-sm table-bordered">
                            <thead><tr><th>Date</th><th>Check In</th><th>Check Out</th><th>Status</th></tr></thead>
                            <tbody>
                                @foreach (var a in Model.AttendanceRecords)
                                {
                                    <tr>
                                        <td>@a.Date.ToShortDateString()</td>
                                        <td>@a.CheckIn</td>
                                        <td>@a.CheckOut</td>
                                        <td>@a.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white">Current Month Annual/Accidental Leave Status</div>
                <div class="card-body">
                    @if (Model.CurrentLeaves.Count == 0)
                    {
                        <p class="text-muted">No submitted annual or accidental leaves this month.</p>
                    }
                    else
                    {
                        <table class="table table-sm table-bordered">
                            <thead><tr><th>Req ID</th><th>Type</th><th>Start Date</th><th>End Date</th><th>Status</th></tr></thead>
                            <tbody>
                                @foreach (var l in Model.CurrentLeaves)
                                {
                                    <tr>
                                        <td>@l.RequestId</td>
                                        <td>@l.LeaveType</td>
                                        <td>@l.StartDate.ToShortDateString()</td>
                                        <td>@l.EndDate.ToShortDateString()</td>
                                        <td>@l.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-dark text-white">Last Month Payroll Details</div>
        <div class="card-body">
            @if (Model.LastPayroll == null)
            {
                <p class="text-muted">Last month's payroll is not yet available.</p>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-3">Payment Date:</dt>
                    <dd class="col-sm-9">@Model.LastPayroll.PaymentDate.ToShortDateString()</dd>

                    <dt class="col-sm-3">Final Salary Amount:</dt>
                    <dd class="col-sm-9">@Model.LastPayroll.FinalSalaryAmount.ToString("C")</dd>

                    <dt class="col-sm-3">Bonus Amount:</dt>
                    <dd class="col-sm-9">@Model.LastPayroll.BonusAmount.ToString("C")</dd>

                    <dt class="col-sm-3">Deductions Amount:</dt>
                    <dd class="col-sm-9">@Model.LastPayroll.DeductionsAmount.ToString("C")</dd>
                </dl>
            }
        </div>
    </div>
</div>
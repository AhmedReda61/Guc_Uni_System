@page
@model Guc_Uni_System.Pages.AcademicDashboardModel
@{
    ViewData["Title"] = "Academic Dashboard";
    // Define today's date for default values
    string today = DateTime.Now.ToString("yyyy-MM-dd");
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&display=swap" rel="stylesheet">

<style>
    /* --- THEME VARIABLES --- */
    :root {
        --bg-color: #050507;
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --accent-aqua: #06b6d4;
        --accent-blue: #3b82f6;
        --accent-purple: #8b5cf6;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
        --glass-hover-bg: rgba(255, 255, 255, 0.07);
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        min-height: 100vh;
    }

    /* --- BACKGROUNDS --- */
    .bg-light-source {
        position: fixed;
        top: 10%;
        left: 80%;
        width: 800px;
        height: 800px;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.12) 0%, rgba(0,0,0,0) 60%);
        border-radius: 50%;
        pointer-events: none;
        z-index: -2;
        filter: blur(80px);
    }

    .bg-vector-icon {
        position: fixed;
        bottom: 10%;
        left: -5%;
        width: 700px;
        height: 700px;
        opacity: 0.03;
        z-index: -3;
        pointer-events: none;
    }

    /* --- GLASS COMPONENTS --- */
    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        transition: border-color 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .glass-card:hover {
            border-color: rgba(255,255,255,0.2);
        }

    .glass-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--glass-border);
        background: rgba(255,255,255,0.02);
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: var(--text-primary);
    }

    .glass-body {
        padding: 1.5rem;
    }

    /* --- BUTTONS --- */
    .btn-glassy {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-glassy:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            transform: translateY(-2px);
        }

    .btn-glassy-primary {
        border-color: rgba(6, 182, 212, 0.3);
        color: #a5f3fc;
    }

        .btn-glassy-primary:hover {
            background: rgba(6, 182, 212, 0.15);
            border-color: var(--accent-aqua);
            color: white;
        }

    .btn-glassy-danger {
        border-color: rgba(239, 68, 68, 0.3);
        color: #fca5a5;
    }

        .btn-glassy-danger:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: #ef4444;
            color: white;
        }

    /* --- FORMS --- */
    .form-control, .form-select {
        background: rgba(0, 0, 0, 0.6) !important;
        border: 1px solid var(--glass-border) !important;
        color: white !important;
        border-radius: 8px;
        padding: 0.6rem 1rem;
    }

        .form-control:focus {
            border-color: var(--accent-aqua) !important;
            box-shadow: 0 0 0 2px rgba(6, 182, 212, 0.15);
        }

    /* FIX: Make placeholders brighter/visible */
    ::placeholder {
        color: rgba(255, 255, 255, 0.6) !important;
        opacity: 1;
    }

    /* FIX: Make date calendar icon white */
    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
        opacity: 0.8;
    }

        input[type="date"]::-webkit-calendar-picker-indicator:hover {
            opacity: 1;
        }

    label {
        color: var(--text-secondary);
        font-size: 0.85rem;
        margin-bottom: 0.4rem;
        display: block;
    }

    /* --- CUSTOM TABS --- */
    .nav-tabs {
        border-bottom: 1px solid var(--glass-border);
        margin-bottom: 2rem;
    }

        .nav-tabs .nav-link {
            color: var(--text-secondary);
            background: transparent;
            border: none;
            border-bottom: 2px solid transparent;
            padding: 1rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s;
        }

            .nav-tabs .nav-link:hover {
                color: white;
                background: rgba(255,255,255,0.02);
            }

            .nav-tabs .nav-link.active {
                color: var(--accent-aqua);
                background: rgba(6, 182, 212, 0.05);
                border-bottom: 2px solid var(--accent-aqua);
            }

    /* --- CUSTOM ACCORDION --- */
    .accordion-glass {
        --bs-accordion-bg: transparent;
        --bs-accordion-btn-color: var(--text-primary);
        --bs-accordion-btn-bg: rgba(255,255,255,0.02);
        --bs-accordion-border-color: var(--glass-border);
    }

    .accordion-button {
        background: rgba(255,255,255,0.02) !important;
        color: white !important;
        border-bottom: 1px solid var(--glass-border);
        box-shadow: none !important;
    }

        .accordion-button:not(.collapsed) {
            background: rgba(6, 182, 212, 0.1) !important;
            color: var(--accent-aqua) !important;
        }

    .accordion-body {
        background: rgba(0,0,0,0.2);
        color: var(--text-secondary);
    }

    .accordion-item {
        border: 1px solid var(--glass-border);
        background: transparent;
        margin-bottom: 1rem;
        border-radius: 12px !important;
        overflow: hidden;
    }

    /* --- TABLES --- */
    .table-container {
        border: 1px solid var(--glass-border);
        border-radius: 10px;
        overflow: hidden;
        margin-top: 0.5rem;
        background: rgba(0,0,0,0.2);
        max-height: 300px;
        overflow-y: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #cbd5e1;
        font-size: 0.9rem;
    }

        .custom-table th {
            background: #050507;
            padding: 12px;
            text-align: left;
            font-size: 0.85em;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: sticky;
            top: 0;
            z-index: 2;
            border-bottom: 1px solid var(--glass-border);
        }

        .custom-table td {
            padding: 12px;
            border-top: 1px solid var(--glass-border);
        }

    /* --- TOAST --- */
    .toast-container {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10000;
        display: none;
    }

    .toast-message {
        background: rgba(5, 5, 5, 0.95);
        border: 1px solid rgba(255,255,255,0.15);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        gap: 15px;
        animation: slideDown 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .toast-message.success {
            border-left: 4px solid #10b981;
        }

        .toast-message.info {
            border-left: 4px solid #3b82f6;
        }

    @@keyframes slideDown {
        from {
            transform: translateY(-30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

<div class="bg-light-source"></div>
<svg class="bg-vector-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path><path d="M12 22v-5"></path></svg>

<div id="toastContainer" class="toast-container">
    <div id="toastMessage" class="toast-message">
        <span id="toastIcon" style="font-size: 1.4em;"></span>
        <div><div style="font-weight: 600; font-size: 0.85em; text-transform: uppercase; color: #94a3b8;">Notification</div><div id="toastText" style="font-size: 0.95em;"></div></div>
    </div>
</div>

@if (TempData["Msg"] != null)
{
<div id="server-msg" data-msg="@TempData["Msg"]" style="display:none;"></div>
}

<div class="container mt-5 pb-5">

    <div class="d-flex align-items-end justify-content-between mb-5 border-bottom border-secondary border-opacity-25 pb-3">
        <div>
            <h2 class="display-5 fw-bold mb-0" style="background: linear-gradient(90deg, #fff, #94a3b8); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">ACADEMIC PORTAL</h2>
            <span class="text-secondary" style="font-family: monospace; letter-spacing: 2px;">STAFF_V.1.0 // LOGGED_IN</span>
        </div>
        <div class="d-flex gap-3 align-items-center">
            <a href="/Profile" class="btn btn-glassy btn-glassy-primary d-flex align-items-center gap-2" style="text-decoration: none;">
                <span style="font-size: 1.2rem;">👤</span> <span class="d-none d-md-inline">Profile</span>
            </a>
            <form method="post" asp-page-handler="Logout" class="m-0">
                <button class="btn btn-glassy btn-glassy-danger">🔒 Logout</button>
            </form>
        </div>
    </div>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item"><button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">My Info</button></li>
        <li class="nav-item"><button class="nav-link" id="apply-tab" data-bs-toggle="tab" data-bs-target="#apply" type="button">Apply for Leaves</button></li>
        @if (Model.IsHeadOfDept)
        {
        <li class="nav-item"><button class="nav-link" id="manage-tab" data-bs-toggle="tab" data-bs-target="#manage" type="button">Management</button></li>
        }
    </ul>

    <div class="tab-content pt-2" id="myTabContent">

        <div class="tab-pane fade show active" id="info">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header"><span style="color: var(--accent-aqua);">💲</span> Last Payroll</div>
                        <div class="glass-body">
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Date</th><th>Amount</th><th>Bonus</th><th>Deductions</th></tr></thead>
                                    <tbody>
                                        @foreach (var p in Model.MyPayrolls) {
                                        <tr><td>@p.PaymentDate?.ToShortDateString()</td><td>@p.FinalSalaryAmount</td><td>@p.BonusAmount</td><td>@p.DeductionsAmount</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header"><span style="color: var(--accent-purple);">📅</span> Leave Status</div>
                        <div class="glass-body">
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Req ID</th><th>Date</th><th>Status</th></tr></thead>
                                    <tbody>
                                        @foreach (var l in Model.MyLeavesStatus) {
                                        <tr><td>@l.RequestId</td><td>@l.DateOfRequest.ToShortDateString()</td><td>@l.Status</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header"><span>⏱️</span> My Attendance</div>
                        <div class="glass-body">
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Date</th><th>In</th><th>Out</th><th>Status</th></tr></thead>
                                    <tbody>
                                        @foreach (var a in Model.MyAttendances) {
                                        <tr><td>@a.Date?.ToShortDateString()</td><td>@a.CheckInTime</td><td>@a.CheckOutTime</td><td>@a.Status</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header"><span>📈</span> Performance</div>
                        <div class="glass-body">
                            <form method="get" class="mb-3 d-flex gap-2 retain-scroll">
                                <input type="text" asp-for="TargetSemester" class="form-control form-control-sm" placeholder="Semester (e.g. W23)" />
                                <button class="btn btn-sm btn-glassy">Filter</button>
                            </form>
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Semester</th><th>Rating</th><th>Comments</th></tr></thead>
                                    <tbody>
                                        @foreach (var p in Model.MyPerformances) {
                                        <tr><td>@p.Semester</td><td style="color: #fbbf24;">@p.Rating ★</td><td>@p.Comments</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="glass-card">
                        <div class="glass-header"><span style="color: #ef4444;">🔻</span> Deductions</div>
                        <div class="glass-body">
                            <form method="get" class="mb-3 d-flex gap-2 align-items-center retain-scroll" style="max-width: 300px;">
                                <label class="m-0">Month:</label>
                                <input type="number" asp-for="TargetMonth" class="form-control form-control-sm" min="1" max="12" />
                                <button class="btn btn-sm btn-glassy">View</button>
                            </form>
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Date</th><th>Amount</th><th>Type</th><th>Status</th></tr></thead>
                                    <tbody>
                                        @foreach (var d in Model.MyDeductions) {
                                        <tr><td>@d.Date?.ToShortDateString()</td><td>@d.Amount</td><td>@d.Type</td><td>@d.Status</td></tr>
 }
                                        @if(Model.MyDeductions.Count == 0){
                                        <tr><td colspan="4" class="text-center opacity-50">No deductions.</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="apply">
            <div class="accordion accordion-glass" id="leaveAccordion">

                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#c1">Apply Annual Leave</button></h2>
                    <div id="c1" class="accordion-collapse collapse show" data-bs-parent="#leaveAccordion">
                        <div class="accordion-body">
                            <form method="post" asp-page-handler="ApplyAnnual" class="retain-scroll">
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-3"><label>Start</label><input type="date" asp-for="AnnualStart" class="form-control" value="@today" required /></div>
                                    <div class="col-md-3"><label>End</label><input type="date" asp-for="AnnualEnd" class="form-control" value="@today" required /></div>
                                    <div class="col-md-3"><label>Replacement ID</label><input type="number" asp-for="ReplacementId" class="form-control" min="1" value="" required /></div>
                                    <div class="col-md-3"><button class="btn btn-glassy btn-glassy-primary w-100">Submit Request</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c2">Apply Accidental Leave</button></h2>
                    <div id="c2" class="accordion-collapse collapse" data-bs-parent="#leaveAccordion">
                        <div class="accordion-body">
                            <form method="post" asp-page-handler="ApplyAccidental" class="retain-scroll">
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-4"><label>Start</label><input type="date" asp-for="AccidentalStart" class="form-control" value="@today" required /></div>
                                    <div class="col-md-4"><label>End</label><input type="date" asp-for="AccidentalEnd" class="form-control" value="@today" required /></div>
                                    <div class="col-md-4"><button class="btn btn-glassy btn-glassy-primary w-100">Submit</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c3">Apply Medical Leave</button></h2>
                    <div id="c3" class="accordion-collapse collapse" data-bs-parent="#leaveAccordion">
                        <div class="accordion-body">
                            <form method="post" asp-page-handler="ApplyMedical" class="retain-scroll">
                                <div class="row g-3 mb-3">
                                    <div class="col-md-3"><label>Start</label><input type="date" asp-for="MedicalStart" class="form-control" value="@today" /></div>
                                    <div class="col-md-3"><label>End</label><input type="date" asp-for="MedicalEnd" class="form-control" value="@today" /></div>
                                    <div class="col-md-3"><label>Type</label><select asp-for="MedicalType" class="form-select"><option value="sick">Sick</option><option value="maternity">Maternity</option></select></div>
                                    <div class="col-md-3 pt-4"><div class="form-check"><input class="form-check-input" type="checkbox" asp-for="InsuranceStatus"><label class="form-check-label text-white">Insurance?</label></div></div>
                                </div>
                                <input type="text" asp-for="DisabilityDetails" placeholder="Details" class="form-control mb-2" />
                                <input type="text" asp-for="MedicalDocDesc" placeholder="Doc Desc" class="form-control mb-2" />
                                <input type="text" asp-for="MedicalFileName" placeholder="File Name" class="form-control mb-3" />
                                <button class="btn btn-glassy btn-glassy-primary w-100">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c4">Apply Unpaid Leave</button></h2>
                    <div id="c4" class="accordion-collapse collapse" data-bs-parent="#leaveAccordion">
                        <div class="accordion-body">
                            <form method="post" asp-page-handler="ApplyUnpaid" class="retain-scroll">
                                <div class="row g-3 mb-2">
                                    <div class="col-md-6"><label>Start</label><input type="date" asp-for="UnpaidStart" class="form-control" value="@today" /></div>
                                    <div class="col-md-6"><label>End</label><input type="date" asp-for="UnpaidEnd" class="form-control" value="@today" /></div>
                                </div>
                                <input type="text" asp-for="UnpaidDocDesc" placeholder="Description" class="form-control mb-2" />
                                <input type="text" asp-for="UnpaidFileName" placeholder="File Name" class="form-control mb-3" />
                                <button class="btn btn-glassy btn-glassy-primary w-100">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c5">Apply Compensation</button></h2>
                    <div id="c5" class="accordion-collapse collapse" data-bs-parent="#leaveAccordion">
                        <div class="accordion-body">
                            <form method="post" asp-page-handler="ApplyComp" class="retain-scroll">
                                <div class="row g-3 mb-2">
                                    <div class="col-md-6"><label>Wanted Date</label><input type="date" asp-for="CompDate" class="form-control" value="@today" /></div>
                                    <div class="col-md-6"><label>Worked Date</label><input type="date" asp-for="CompOriginalDate" class="form-control" value="@today" /></div>
                                </div>
                                <input type="text" asp-for="CompReason" placeholder="Reason" class="form-control mb-2" />
                                <input type="number" asp-for="CompReplacementId" placeholder="Replacement ID" class="form-control mb-3" min="1" value="" />
                                <button class="btn btn-glassy btn-glassy-primary w-100">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        @if (Model.IsHeadOfDept)
        {
        <div class="tab-pane fade" id="manage">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header">Approve Unpaid Leave</div>
                        <div class="glass-body">
                            <form method="post" asp-page-handler="ApproveUnpaid" class="retain-scroll">
                                <div class="input-group mb-2">
                                    <input type="number" asp-for="ManageRequestId" class="form-control" placeholder="Request ID" min="1" value="" required />
                                    <button class="btn btn-glassy btn-glassy-primary">Process</button>
                                </div>
                                <small class="text-secondary">Authorized for: Deans, Vice Deans, Presidents</small>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="glass-card">
                        <div class="glass-header">Approve Annual Leave</div>
                        <div class="glass-body">
                            <form method="post" asp-page-handler="ApproveAnnual" class="retain-scroll">
                                <input type="number" asp-for="ManageRequestId" class="form-control mb-2" placeholder="Request ID" min="1" value="" required />
                                <input type="number" asp-for="ManageReplacementId" class="form-control mb-3" placeholder="Replacement ID" min="1" value="" required />
                                <button class="btn btn-glassy btn-glassy-primary w-100">Approve</button>
                            </form>
                        </div>
                    </div>
                </div>

                @if (Model.IsDean)
                    {
                <div class="col-md-12">
                    <div class="glass-card" style="border-color: rgba(251, 191, 36, 0.3);">
                        <div class="glass-header" style="color: #fbbf24;">⭐ Dean's Evaluation</div>
                        <div class="glass-body">
                            <form method="post" asp-page-handler="Evaluate" class="retain-scroll">
                                <div class="row g-3">
                                    <div class="col-md-4"><input type="number" asp-for="EvalEmpId" class="form-control" placeholder="Employee ID" min="1" value="" required /></div>
                                    <div class="col-md-4"><input type="number" asp-for="EvalRating" class="form-control" placeholder="Rating (1-5)" min="1" max="5" value="" required /></div>
                                    <div class="col-md-4"><input type="text" asp-for="EvalSemester" class="form-control" placeholder="Semester (e.g. W23)" required /></div>
                                    <div class="col-12"><textarea asp-for="EvalComment" class="form-control" placeholder="Comments" rows="2" required></textarea></div>
                                    <div class="col-12"><button class="btn btn-glassy w-100" style="color: #fbbf24; border-color: rgba(251, 191, 36, 0.5);">Submit Evaluation</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                    }
            </div>
        </div>
        }
    </div>
</div>


<style>
    /* --- THEME VARIABLES --- */
    :root {
        --bg-color: #030305;
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --accent-aqua: #06b6d4;
        --accent-blue: #3b82f6;
        --accent-purple: #8b5cf6;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    /* --- 1. LOCAL VIDEO BACKGROUND --- */
    .video-background {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: -99;
        overflow: hidden;
        pointer-events: none;
    }

        /* UPDATED SELECTOR FOR HTML5 VIDEO */
        .video-background video {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100vw;
            height: 100vh;
            /* Fallback logic for aspect ratio */
            min-width: 177.77vh;
            min-height: 56.25vw;
            transform: translate(-50%, -50%);
            pointer-events: none;
            opacity: 0.1;
            filter: contrast(1.2) saturate(1.1);
            object-fit: cover; /* Ensures video covers screen without distortion */
        }

    /* --- 2. REFINED NOISE OVERLAY --- */
    .noise-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
        z-index: -90;
        pointer-events: none;
        mix-blend-mode: overlay;
    }

    /* --- 3. GRADIENT ORBS --- */
    .orb {
        position: fixed;
        border-radius: 50%;
        filter: blur(120px);
        z-index: -95;
        opacity: 0.3;
        animation: floatOrb 25s infinite alternate ease-in-out;
    }

    .orb-1 {
        top: -20%;
        left: -10%;
        width: 800px;
        height: 800px;
        background: var(--accent-blue);
    }

    .orb-2 {
        bottom: -20%;
        right: -10%;
        width: 800px;
        height: 800px;
        background: var(--accent-purple);
        animation-delay: -5s;
    }

    /* --- HERO SECTION --- */
    .hero-section {
        min-height: 90vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        padding-top: 5vh;
    }

    .hero-title {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 5.5rem;
        font-weight: 700;
        line-height: 0.95;
        background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
        text-shadow: 0 0 40px rgba(255,255,255,0.1);
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin-bottom: 3.5rem;
        font-weight: 300;
        line-height: 1.6;
        z-index: 2;
        backdrop-filter: blur(2px);
        padding: 10px;
        border-radius: 10px;
    }

    /* --- ROTATING TEXT RING --- */
    .circle-text-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 650px;
        height: 650px;
        pointer-events: none;
        z-index: 1;
        opacity: 0.12;
    }

    .circle-text {
        width: 100%;
        height: 100%;
        animation: rotateText 40s linear infinite;
    }

    /* --- BUTTONS --- */
    .btn-stellar-lg {
        padding: 1rem 3rem;
        border-radius: 100px;
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        z-index: 10;
        backdrop-filter: blur(10px);
        letter-spacing: 0.5px;
    }

    .btn-primary-glow {
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.2));
        color: white;
        border: 1px solid rgba(255,255,255,0.1);
        box-shadow: 0 0 30px rgba(59, 130, 246, 0.15);
    }

        .btn-primary-glow:hover {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(59, 130, 246, 0.3));
            box-shadow: 0 0 50px rgba(59, 130, 246, 0.4);
            transform: translateY(-4px) scale(1.02);
            color: white;
            border-color: rgba(255,255,255,0.3);
        }

    .btn-secondary-glow {
        background: rgba(255,255,255,0.02);
        color: var(--text-secondary);
        border: 1px solid rgba(255,255,255,0.05);
    }

        .btn-secondary-glow:hover {
            background: rgba(255,255,255,0.08);
            color: white;
            transform: translateY(-4px);
            border-color: rgba(255,255,255,0.2);
        }

    /* --- TEAM SECTION --- */
    .team-section {
        padding: 6rem 0 4rem 0;
        position: relative;
        z-index: 5;
        background: linear-gradient(to top, var(--bg-color) 10%, transparent 100%);
    }

    .section-label {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        color: var(--accent-aqua);
        margin-bottom: 3rem;
        display: block;
        text-align: center;
        opacity: 0.8;
    }

    .team-grid {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1.5rem;
        perspective: 1000px;
    }

    .team-card {
        background: rgba(20, 20, 25, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        padding: 2rem 1.5rem;
        border-radius: 20px;
        width: 200px;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }

        .team-card:hover {
            transform: translateY(-15px) rotateX(5deg);
            border-color: rgba(255, 255, 255, 0.15);
            background: rgba(20, 20, 25, 0.6);
            box-shadow: 0 15px 35px rgba(0,0,0,0.5);
        }

        .team-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, rgba(6,182,212,0.1) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .team-card:hover::after {
            opacity: 1;
        }

    .team-avatar {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1e293b, #0f172a);
        margin: 0 auto 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--accent-aqua);
        border: 1px solid rgba(255,255,255,0.1);
        font-weight: 600;
        position: relative;
        z-index: 2;
    }

    .team-name {
        color: #e2e8f0;
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.3rem;
        position: relative;
        z-index: 2;
    }

    .team-role {
        color: #64748b;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        z-index: 2;
    }

    /* --- GITHUB FLOATER --- */
    .github-floater {
        margin-top: 5rem;
        padding: 0.8rem 1.5rem;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 50px;
        background: rgba(255,255,255,0.02);
        backdrop-filter: blur(5px);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--text-secondary);
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.9rem;
    }

        .github-floater:hover {
            background: rgba(255,255,255,0.08);
            color: white;
            border-color: var(--accent-purple);
            box-shadow: 0 0 25px rgba(139, 92, 246, 0.15);
            transform: scale(1.05);
        }

    /* Animations */
    @@keyframes rotateText {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes floatOrb {
        from {
            transform: translate(0, 0);
        }

        to {
            transform: translate(60px, 60px);
        }
    }
</style>


@page
@model Guc_Uni_System.Pages.HRDashboardModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>HR Management Panel</h2>
        <form method="post" asp-page-handler="Logout">
            <button class="btn btn-danger">Logout</button>
        </form>
    </div>

    <!-- Feedback Message -->
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">

        <!-- SECTION 1: LEAVE APPROVALS -->
        <div class="col-lg-4 col-md-12 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Leave Approvals</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Enter Request ID to process approvals.</p>

                    <!-- Annual/Accidental -->
                    <form method="post" asp-page-handler="ApproveAnnualAcc" class="mb-3">
                        <label class="form-label fw-bold">Annual / Accidental</label>
                        <div class="input-group">
                            <input type="number" asp-for="LeaveRequestId" class="form-control" placeholder="Req ID" required />
                            <button class="btn btn-outline-primary">Process</button>
                        </div>
                    </form>

                    <hr />

                    <!-- Unpaid -->
                    <form method="post" asp-page-handler="ApproveUnpaid" class="mb-3">
                        <label class="form-label fw-bold">Unpaid Leave</label>
                        <div class="input-group">
                            <input type="number" asp-for="LeaveRequestId" class="form-control" placeholder="Req ID" required />
                            <button class="btn btn-outline-warning">Process</button>
                        </div>
                    </form>

                    <hr />

                    <!-- Compensation -->
                    <form method="post" asp-page-handler="ApproveComp">
                        <label class="form-label fw-bold">Compensation Leave</label>
                        <div class="input-group">
                            <input type="number" asp-for="LeaveRequestId" class="form-control" placeholder="Req ID" required />
                            <button class="btn btn-outline-success">Process</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- SECTION 2: DEDUCTIONS -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Deductions</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Apply penalties to specific employees.</p>

                    <!-- Missing Hours -->
                    <div class="card mb-3 border-danger">
                        <div class="card-body p-3">
                            <h6 class="card-title text-danger">Missing Hours</h6>
                            <form method="post" asp-page-handler="AddMissingHours">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control" placeholder="Emp ID" required />
                                    <button class="btn btn-danger">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Missing Days -->
                    <div class="card mb-3 border-danger">
                        <div class="card-body p-3">
                            <h6 class="card-title text-danger">Missing Days</h6>
                            <form method="post" asp-page-handler="AddMissingDays">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control" placeholder="Emp ID" required />
                                    <button class="btn btn-danger">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Unpaid Leave Deduction -->
                    <div class="card border-danger">
                        <div class="card-body p-3">
                            <h6 class="card-title text-danger">Unpaid Leave</h6>
                            <form method="post" asp-page-handler="AddUnpaidDeduction">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control" placeholder="Emp ID" required />
                                    <button class="btn btn-danger">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- SECTION 3: PAYROLL -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Payroll</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Generate monthly salary records.</p>

                    <form method="post" asp-page-handler="GeneratePayroll">
                        <div class="mb-3">
                            <label class="form-label">Employee ID</label>
                            <input type="number" asp-for="EmpId" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">From Date</label>
                            <input type="date" asp-for="PayStart" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">To Date</label>
                            <input type="date" asp-for="PayEnd" class="form-control" required />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success btn-lg">Generate Payroll</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
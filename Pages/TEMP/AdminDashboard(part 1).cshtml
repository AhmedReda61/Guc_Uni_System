@page
@model Guc_Uni_System.Pages.AdminDashboardModel
@{ ViewData["Title"] = "Admin Dashboard"; }

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center my-3">
        <h2>Admin Dashboard</h2>
        <form method="post" asp-page-handler="Logout">
            <button class="btn btn-danger">Logout</button>
        </form>
    </div>

    <!-- Feedback Message -->
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }

    <!-- ROW 1: Quick Actions & Forms -->
    <div class="row mb-4">

        <!-- CARD: Add Holiday (Req 7) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">Add Holiday</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="AddHoliday">
                        <div class="mb-2">
                            <label>name</label>
                            <input type="text" asp-for="HolidayName" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>From</label>
                            <input type="date" asp-for="From" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>To</label>
                            <input type="date" asp-for="To" class="form-control" required />
                        </div>
                        <button class="btn btn-success w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CARD: Update Attendance (Req 6) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">Update Attendance</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateAttendance">
                        <div class="mb-1">
                            <input type="number" asp-for="UpdateEmpId" placeholder="Emp ID" class="form-control" required />
                        </div>
                        <div class="mb-1">
                            <input type="time" asp-for="check_in" class="form-control" required />
                        </div>
                        <div class="mb-2">
							<input type="time" asp-for="check_out" class="form-control" required />
                        </div>
                        <button class="btn btn-warning w-100">Update</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CARD: Maintenance (Req 5 & 8) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">System Actions</div>
                <div class="card-body d-grid gap-2">
                    <form method="post" asp-page-handler="InitAttendance">
                        <button class="btn btn-primary w-100">Init Daily Attendance</button>
                    </form>

                    <form method="post" asp-page-handler="RemoveDeductions">
                        <button class="btn btn-danger w-100">Remove Resigned Deductions</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ROW 2: Data Reports -->
    <div class="row">

        <!-- TABLE: Emp Per Dept (Req 3) -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Employees Per Department</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead><tr><th>Dept</th><th>Count</th></tr></thead>
                        <tbody>
                            @foreach (var d in Model.DeptCounts)
                            {
                                <tr>
                                    <td>@d.Department</td>
                                    <td>@d.NumberOfEmployees</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- REQ #4: Rejected Medical Leaves Table -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    Rejected Medical Leaves
                </div>
                <div class="card-body">
                    @if (Model.RejectedMedicalLeaves.Count == 0)
                    {
                        <p class="text-muted">No rejected medical leaves found.</p>
                    }
                    else
                    {
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Req ID</th>
                                    <th>Emp ID</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var leave in Model.RejectedMedicalLeaves)
                                {
                                    <tr>
                                        <td>@leave.RequestId</td>
                                        <td>@leave.EmpId</td>
                                        <td>@leave.DisabilityDetails</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

    

    <!-- ROW 3: Full Employee List (Req 2) -->
    <div class="card mt-4">
        <div class="card-header">All Employee Profiles</div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Years of experience</th>
                        <th>Official dayoff</th>
                        <th>Contract</th>
                        <th>Status</th>
                        <th>Annual Balance</th>
                        <th>Accidental Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Employees)
                    {
                        <tr>
                            <td>@e.EmployeeId</td>
                            <td>@e.FirstName @e.LastName</td>
                            <td>@e.Gender</td>
                            <td>@e.Email</td>
                            <td>@e.Address</td>
                            <td>@e.YearsOfExperience</td>
                            <td>@e.OfficialDayOff</td>
                            <td>@e.TypeOfContract</td>
                            <td>@e.EmploymentStatus</td>
                            <td>@e.AnnualBalance</td>
                            <td>@e.AccidentalBalance</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>
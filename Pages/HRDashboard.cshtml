@page
@model Guc_Uni_System.Pages.HRDashboardModel
@{
    ViewData["Title"] = "HR Dashboard";
    // Calculate today's date for default values in Payroll form
    string today = DateTime.Now.ToString("yyyy-MM-dd");
}

<style>
    .dashboard-header {
        margin-top: 2rem;
        margin-bottom: 3rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 1rem;
    }

    .holographic-card {
        background: rgba(20, 20, 25, 0.6);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        height: auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .holographic-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            border-color: rgba(255, 255, 255, 0.2);
        }

    /* --- DYNAMIC HEADER LOGIC --- */
    .card-header-glow {
        background: rgba(255, 255, 255, 0.03);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        font-family: 'Space Grotesk', sans-serif;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        user-select: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s ease;
        color: #64748b; /* Default muted gray */
    }

        .card-header-glow:hover {
            background: rgba(255, 255, 255, 0.06);
            color: #94a3b8;
        }

    /* Active State (Expanded) Colors */
    .header-approvals[aria-expanded="true"] {
        color: var(--accent-blue) !important;
        text-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
        border-bottom-color: rgba(59, 130, 246, 0.2);
    }

    .header-deductions[aria-expanded="true"] {
        color: #f87171 !important;
        text-shadow: 0 0 15px rgba(248, 113, 113, 0.4);
        border-bottom-color: rgba(248, 113, 113, 0.2);
    }

    .header-payroll[aria-expanded="true"] {
        color: #34d399 !important;
        text-shadow: 0 0 15px rgba(52, 211, 153, 0.4);
        border-bottom-color: rgba(52, 211, 153, 0.2);
    }

    /* Chevron rotation logic */
    .header-chevron {
        transition: transform 0.3s ease;
    }

    .card-header-glow[aria-expanded="false"] .header-chevron {
        transform: rotate(-90deg);
        opacity: 0.5;
    }

    /* Custom Input Styling */
    .form-control-glass {
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: #e2e8f0 !important;
        border-radius: 8px;
    }

        .form-control-glass:focus {
            background: rgba(0, 0, 0, 0.5) !important;
            border-color: var(--accent-aqua) !important;
            box-shadow: 0 0 0 0.25rem rgba(6, 182, 212, 0.25) !important;
        }

    /* FIX: Make placeholders brighter/visible */
    ::placeholder {
        color: rgba(255, 255, 255, 0.6) !important;
        opacity: 1;
    }

    /* --- FIX DATE ICON COLOR --- */
    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
        opacity: 0.8;
    }

        input[type="date"]::-webkit-calendar-picker-indicator:hover {
            opacity: 1;
        }

    /* Button Overrides */
    .btn-neon {
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
    }

    .btn-neon-primary {
        background: transparent;
        border: 1px solid var(--accent-blue);
        color: var(--accent-blue);
    }

        .btn-neon-primary:hover {
            background: var(--accent-blue);
            color: white;
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
        }

    .btn-neon-danger {
        background: transparent;
        border: 1px solid #ef4444;
        color: #ef4444;
    }

        .btn-neon-danger:hover {
            background: #ef4444;
            color: white;
            box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
        }

    .btn-neon-success {
        background: transparent;
        border: 1px solid #10b981;
        color: #10b981;
    }

        .btn-neon-success:hover {
            background: #10b981;
            color: white;
            box-shadow: 0 0 15px rgba(16, 185, 129, 0.4);
        }

    .btn-neon-warning {
        background: transparent;
        border: 1px solid #f59e0b;
        color: #f59e0b;
    }

        .btn-neon-warning:hover {
            background: #f59e0b;
            color: white;
            box-shadow: 0 0 15px rgba(245, 158, 11, 0.4);
        }

    .mini-card {
        background: rgba(255,255,255,0.02);
        border: 1px solid rgba(255,255,255,0.05);
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-bottom: 0.4rem;
        display: block;
    }
</style>

<div class="container pb-5 mb-5">

    <div class="d-flex justify-content-between align-items-center dashboard-header">
        <div>
            <h2 style="font-family: 'Space Grotesk'; font-weight: 700; color: white;">HR COMMAND CENTER</h2>
            <span style="color: var(--accent-aqua); letter-spacing: 2px; font-size: 0.9rem;">ADMINISTRATION LEVEL 5</span>
        </div>
        <form method="post" asp-page-handler="Logout">
            <button class="btn btn-outline-danger rounded-pill px-4 fw-bold">Logout</button>
        </form>
    </div>

    @if (TempData["Msg"] != null)
    {
    <div class="alert alert-success d-flex align-items-center mb-4" role="alert" style="background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.3); color: #34d399;">
        <div>@TempData["Msg"]</div>
        <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }

    <div class="row g-4">

        <div class="col-lg-4 col-md-12">
            <div class="holographic-card">
                <div class="card-header-glow header-approvals" data-bs-toggle="collapse" data-bs-target="#collapseLeaves" aria-expanded="true">
                    <span><i class="bi bi-check-circle me-2"></i> Leave Approvals</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down header-chevron" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" /></svg>
                </div>

                <div id="collapseLeaves" class="collapse show">
                    <div class="card-body p-4">
                        <p class="small" style="color: var(--text-secondary);">Authorize leave requests via ID.</p>

                        <div class="mini-card">
                            <form method="post" asp-page-handler="ApproveAnnualAcc">
                                <label>Annual / Accidental</label>
                                <div class="input-group">
                                    <input type="number" asp-for="LeaveRequestId" class="form-control form-control-glass" placeholder="Req ID" value="" min="1" required />
                                    <button class="btn btn-neon-primary">Process</button>
                                </div>
                            </form>
                        </div>

                        <div class="mini-card">
                            <form method="post" asp-page-handler="ApproveUnpaid">
                                <label>Unpaid Leave</label>
                                <div class="input-group">
                                    <input type="number" asp-for="LeaveRequestId" class="form-control form-control-glass" placeholder="Req ID" value="" min="1" required />
                                    <button class="btn btn-neon-warning">Process</button>
                                </div>
                            </form>
                        </div>

                        <div class="mini-card mb-0">
                            <form method="post" asp-page-handler="ApproveComp">
                                <label>Compensation Leave</label>
                                <div class="input-group">
                                    <input type="number" asp-for="LeaveRequestId" class="form-control form-control-glass" placeholder="Req ID" value="" min="1" required />
                                    <button class="btn btn-neon-success">Process</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="holographic-card">
                <div class="card-header-glow header-deductions" data-bs-toggle="collapse" data-bs-target="#collapseDeductions" aria-expanded="true">
                    <span><i class="bi bi-exclamation-triangle me-2"></i> Deductions</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down header-chevron" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" /></svg>
                </div>

                <div id="collapseDeductions" class="collapse show">
                    <div class="card-body p-4">
                        <p class="small" style="color: var(--text-secondary);">Apply penalties to employee records.</p>

                        <div class="mini-card" style="border-left: 3px solid #f87171;">
                            <h6 style="color: #fca5a5; font-size: 0.9rem;">Missing Hours</h6>
                            <form method="post" asp-page-handler="AddMissingHours" class="mt-2">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control form-control-glass" placeholder="Emp ID" value="" min="1" required />
                                    <button class="btn btn-neon-danger">Apply</button>
                                </div>
                            </form>
                        </div>

                        <div class="mini-card" style="border-left: 3px solid #f87171;">
                            <h6 style="color: #fca5a5; font-size: 0.9rem;">Missing Days</h6>
                            <form method="post" asp-page-handler="AddMissingDays" class="mt-2">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control form-control-glass" placeholder="Emp ID" value="" min="1" required />
                                    <button class="btn btn-neon-danger">Apply</button>
                                </div>
                            </form>
                        </div>

                        <div class="mini-card mb-0" style="border-left: 3px solid #f87171;">
                            <h6 style="color: #fca5a5; font-size: 0.9rem;">Unpaid Leave</h6>
                            <form method="post" asp-page-handler="AddUnpaidDeduction" class="mt-2">
                                <div class="input-group input-group-sm">
                                    <input type="number" asp-for="EmpId" class="form-control form-control-glass" placeholder="Emp ID" value="" min="1" required />
                                    <button class="btn btn-neon-danger">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="holographic-card">
                <div class="card-header-glow header-payroll" data-bs-toggle="collapse" data-bs-target="#collapsePayroll" aria-expanded="true">
                    <span><i class="bi bi-cash-stack me-2"></i> Payroll Generation</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down header-chevron" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" /></svg>
                </div>

                <div id="collapsePayroll" class="collapse show">
                    <div class="card-body p-4">
                        <p class="small" style="color: var(--text-secondary);">Generate financial records for billing cycles.</p>

                        <form method="post" asp-page-handler="GeneratePayroll">
                            <div class="mb-3">
                                <label>Employee ID</label>
                                <input type="number" asp-for="EmpId" class="form-control form-control-glass" placeholder="e.g. 1024" value="" min="1" required />
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <label>From Date</label>
                                    <input type="date" asp-for="PayStart" class="form-control form-control-glass" value="@today" required />
                                </div>
                                <div class="col-6">
                                    <label>To Date</label>
                                    <input type="date" asp-for="PayEnd" class="form-control form-control-glass" value="@today" required />
                                </div>
                            </div>

                            <div class="d-grid mt-4">
                                <button class="btn btn-neon-success py-2">
                                    <span class="me-2">⚡</span> Execute Payroll
                                </button>
                            </div>
                        </form>

                        <div class="mt-4 p-3 text-center" style="background: rgba(255,255,255,0.02); border-radius: 8px;">
                            <small class="d-block" style="color: rgba(255, 255, 255, 0.6);">System Status</small>
                            <span style="color: #34d399; font-size: 0.8rem;">● DATABASE CONNECTED</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@page
@model Guc_Uni_System.Pages.AnnouncementsModel
@{
    ViewData["Title"] = "Broadcast Deck";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=Space+Grotesk:wght@300;700&display=swap" rel="stylesheet">

<style>
    :root {
        --bg-color: #030305;
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
    }

    /* --- BACKGROUNDS --- */
    .bg-light-source {
        position: fixed;
        top: 50%;
        right: -20%;
        width: 1000px;
        height: 1000px;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(0,0,0,0) 60%);
        border-radius: 50%;
        pointer-events: none;
        z-index: -2;
        filter: blur(80px);
    }

    .noise-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
        z-index: -1;
        pointer-events: none;
        mix-blend-mode: overlay;
    }

    /* --- FEED STYLES --- */
    .feed-header {
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding-bottom: 2rem;
        margin-bottom: 3rem;
    }

    .feed-title {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 3rem;
        font-weight: 700;
        color: white;
        letter-spacing: -1px;
        margin: 0;
    }

    .feed-subtitle {
        color: var(--text-secondary);
        font-family: monospace;
        letter-spacing: 2px;
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }

    .news-card {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .news-card:hover {
            transform: translateX(10px);
            background: rgba(255,255,255,0.05);
        }

    .news-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .news-date {
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-family: monospace;
    }

    .badge-glow {
        padding: 0.4rem 0.8rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .badge-critical {
        background: rgba(239, 68, 68, 0.15);
        color: #fca5a5;
        border: 1px solid rgba(239, 68, 68, 0.3);
        box-shadow: 0 0 15px rgba(239, 68, 68, 0.2);
    }

    .badge-academic {
        background: rgba(59, 130, 246, 0.15);
        color: #93c5fd;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .badge-hr {
        background: rgba(139, 92, 246, 0.15);
        color: #c4b5fd;
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    .badge-general {
        background: rgba(255, 255, 255, 0.05);
        color: #cbd5e1;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .news-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
    }

    .news-body {
        color: #cbd5e1;
        line-height: 1.6;
        font-size: 1rem;
    }

    /* Left Border Accent */
    .news-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: rgba(255,255,255,0.1);
    }

    .news-card.critical::before {
        background: #ef4444;
        box-shadow: 0 0 10px #ef4444;
    }

    .news-card.academic::before {
        background: #3b82f6;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        background: rgba(255,255,255,0.05);
        color: var(--text-primary);
        text-decoration: none;
        border: 1px solid var(--glass-border);
        transition: all 0.3s;
        margin-bottom: 2rem;
        font-size: 0.9rem;
    }

        .btn-back:hover {
            background: rgba(255,255,255,0.1);
            border-color: white;
            color: white;
        }
</style>

<div class="bg-light-source"></div>
<div class="noise-overlay"></div>

<div class="container py-5 mb-5">

    <a href="/" class="btn-back"><span>←</span> Return Home</a>

    <div class="feed-header">
        <h1 class="feed-title">BROADCAST DECK</h1>
        <div class="feed-subtitle">LIVE SYSTEM UPDATES // CHANNEL_OPEN</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9">

            @foreach (var news in Model.Broadcasts)
            {
                // Dynamic class for styling based on category
                string cardClass = news.Category == "Critical" ? "critical" : (news.Category == "Academic" ? "academic" : "");
                string badgeClass = news.Category == "Critical" ? "badge-critical" :
                                    (news.Category == "Academic" ? "badge-academic" :
                                    (news.Category == "HR Update" ? "badge-hr" : "badge-general"));

            <div class="news-card @cardClass">
                <div class="news-meta">
                    <span class="badge-glow @badgeClass">@news.Category</span>
                    <span class="news-date">@news.Date.ToString("yyyy-MM-dd HH:mm")</span>
                </div>
                <h3 class="news-title">@news.Title</h3>
                <p class="news-body">@news.Body</p>
            </div>
            }

        </div>
    </div>
</div>
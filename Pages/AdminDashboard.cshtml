@page
@model Guc_Uni_System.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<nav class="navbar navbar-light bg-light justify-content-between px-3 mb-3">
    <span class="navbar-brand mb-0 h1">Admin Panel</span>
    <form method="post" asp-page-handler="Logout">
        <button class="btn btn-outline-danger btn-sm">Logout</button>
    </form>
</nav>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Employees</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th> <!-- Adjust based on your columns -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.Employees)
                    {
                        <tr>
                            <td>@emp.EmployeeId</td>
                            <td>@emp.FirstName @emp.LastName</td>
                            <td>@emp.Email</td>
                            <!-- Check your Employee.cs to see what the Department property is named -->
                            <!-- It might be emp.DeptName or emp.Department?.Name -->
                            <td>@emp.DeptName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
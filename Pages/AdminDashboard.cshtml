@page
@model Guc_Uni_System.Pages.AdminDashboardModel
@{ ViewData["Title"] = "Admin Dashboard"; }

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center my-3">
        <h2>Admin Dashboard</h2>
        <form method="post" asp-page-handler="Logout">
            <button class="btn btn-danger">Logout</button>
        </form>
    </div>

    <!-- Feedback Message -->
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }

    <!-- ROW 1: Quick Actions & Forms -->
    <div class="row mb-4">

        <!-- CARD: Add Holiday (Req 7) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">Add Holiday</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="AddHoliday">
                        <div class="mb-2">
                            <label>Name</label>
                            <input type="text" asp-for="HolidayName" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>Date</label>
                            <input type="date" asp-for="HolidayDate" class="form-control" required />
                        </div>
                        <button class="btn btn-success w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CARD: Update Attendance (Req 6) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">Update Attendance</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateAttendance">
                        <div class="mb-1">
                            <input type="number" asp-for="UpdateEmpId" placeholder="Emp ID" class="form-control" required />
                        </div>
                        <div class="mb-1">
                            <input type="date" asp-for="UpdateDate" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <select asp-for="UpdateStatus" class="form-control">
                                <option value="Present">Present</option>
                                <option value="Absent">Absent</option>
                            </select>
                        </div>
                        <button class="btn btn-warning w-100">Update</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- CARD: Maintenance (Req 5 & 8) -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">System Actions</div>
                <div class="card-body d-grid gap-2">
                    <form method="post" asp-page-handler="InitAttendance">
                        <button class="btn btn-primary w-100">Init Daily Attendance</button>
                    </form>

                    <form method="post" asp-page-handler="RemoveDeductions">
                        <button class="btn btn-danger w-100">Remove Resigned Deductions</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ROW 2: Data Reports -->
    <div class="row">

        <!-- TABLE: Emp Per Dept (Req 3) -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Employees Per Department</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead><tr><th>Dept</th><th>Count</th></tr></thead>
                        <tbody>
                            @foreach (var d in Model.DeptCounts)
                            {
                                <tr><td>@d.Name</td><td>@d.Count</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- TABLE: Rejected Leaves (Req 4) -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Rejected Leaves</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead><tr><th>ID</th><th>Date</th><th>Status</th></tr></thead>
                        <tbody>
                            @foreach (var l in Model.RejectedLeaves)
                            {
                                <tr>
                                    <td>@l.RequestId</td>
                                    <td>@l.StartDate</td>
                                    <td class="text-danger">@l.FinalApprovalStatus</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <!-- ROW 3: Full Employee List (Req 2) -->
    <div class="card mt-4">
        <div class="card-header">All Employee Profiles</div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr><th>ID</th><th>Name</th><th>Email</th><th>Dept</th></tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Employees)
                    {
                        <tr>
                            <td>@e.EmployeeId</td>
                            <td>@e.FirstName @e.LastName</td>
                            <td>@e.Email</td>
                            <td>@e.DeptName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
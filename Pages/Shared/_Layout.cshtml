@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    // Read the role from the session to decide what links to show
    var userRole = Context.Session.GetString("user_role");
    var userId = Context.Session.GetInt32("user_id");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GUC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Guc_Uni_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">GUC HR System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Always show Home -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <!-- Always show Data Viewer (For easy testing) -->
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-page="/all">All Data</a>
                        </li>

                        <!-- SMART LINK: Show Dashboard based on Role -->
                        @if (userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-page="/AdminDashboard">Admin Panel</a>
                            </li>
                        }
                        else if (userRole == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-page="/HRDashboard">HR Panel</a>
                            </li>
                        }
                        else if (userRole == "Academic")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-page="/AcademicDashboard">My Dashboard</a>
                            </li>
                        }
                    </ul>

                    <!-- Right Side: User Status -->
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(userRole))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    <i class="bi bi-person-circle"></i> Welcome, @userRole @(userId != 0 ? $"#{userId}" : "")
                                </span>
                            </li>
                            <li class="nav-item">
                                <!-- Note: Logout logic is handled in dashboards, but a link to Login clears session effectively in most simple flows -->
                                <a class="btn btn-outline-light btn-sm ms-2" asp-page="/Login">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-light text-primary btn-sm fw-bold" asp-page="/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1 mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="text-muted small">&copy; 2025 - <strong>GUC HR System</strong></span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <span class="text-muted small">Team XX | Milestone 3</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

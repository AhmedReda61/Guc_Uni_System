@page
@model Guc_Uni_System.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&display=swap" rel="stylesheet">

<style>
    /* --- Global Theme Variables --- */
    :root {
        --bg-color: #050507;
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --accent-aqua: #06b6d4;
        --accent-blue: #3b82f6;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
        --glass-hover-bg: rgba(255, 255, 255, 0.07);
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        min-height: 100vh;
        position: relative;
    }

    /* --- BACKGROUND ELEMENTS --- */
    .bg-light-source {
        position: fixed;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 900px;
        height: 900px;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.15) 0%, rgba(0,0,0,0) 60%);
        border-radius: 50%;
        pointer-events: none;
        z-index: -2;
        filter: blur(60px);
    }

    .bg-vector-icon {
        position: fixed;
        top: 20%;
        right: -5%;
        width: 600px;
        height: 600px;
        opacity: 0.03;
        z-index: -3;
        pointer-events: none;
        transform: rotate(-10deg);
    }

    .shape-triangle {
        position: absolute;
        top: 20%;
        right: 10%;
        width: 0;
        height: 0;
        border-left: 100px solid transparent;
        border-right: 100px solid transparent;
        border-bottom: 170px solid rgba(139, 92, 246, 0.05);
        filter: blur(2px);
        transform: rotate(15deg);
        animation: float 10s ease-in-out infinite;
        z-index: -3;
    }

    /* --- GLASSY BUTTONS --- */
    .btn-glassy {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .btn-glassy:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.3);
        }

    .btn-glassy-danger {
        border-color: rgba(239, 68, 68, 0.3);
        color: #fca5a5;
    }

        .btn-glassy-danger:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: #ef4444;
            color: white;
        }

    .btn-glassy-primary {
        border-color: rgba(6, 182, 212, 0.3);
        color: #a5f3fc;
    }

        .btn-glassy-primary:hover {
            background: rgba(6, 182, 212, 0.15);
            border-color: var(--accent-aqua);
            color: white;
        }

    /* --- COLLAPSE ANIMATION --- */
    .glass-body {
        padding: 1.5rem;
        transition: all 0.25s ease-out;
        max-height: 2000px;
        opacity: 1;
        overflow: hidden;
    }

        .glass-body.collapsed {
            max-height: 0;
            padding-top: 0;
            padding-bottom: 0;
            opacity: 0;
            border: none;
        }

    /* --- TOAST & CARDS --- */
    .toast-container {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10000;
        display: none;
    }

    .toast-message {
        background: rgba(5, 5, 5, 0.95);
        border: 1px solid rgba(255,255,255,0.15);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        gap: 15px;
        min-width: 320px;
        animation: slideDown 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .toast-message.success {
            border-left: 4px solid #10b981;
        }

        .toast-message.error {
            border-left: 4px solid #ef4444;
        }

    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        height: auto;
        transition: border-color 0.3s ease;
        display: flex;
        flex-direction: column;
    }

        .glass-card:hover {
            border-color: rgba(255,255,255,0.2);
        }

    .glass-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--glass-border);
        background: rgba(255,255,255,0.02);
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: var(--text-primary);
    }

    .form-control {
        background: rgba(0, 0, 0, 0.6) !important;
        border: 1px solid var(--glass-border) !important;
        color: white !important;
        border-radius: 8px;
        padding: 0.6rem 1rem;
    }

        .form-control:focus {
            border-color: var(--accent-aqua) !important;
            box-shadow: 0 0 0 2px rgba(6, 182, 212, 0.15);
        }

    @@keyframes slideDown {
        from {
            transform: translateY(-30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(15deg);
        }

        50% {
            transform: translateY(-20px) rotate(20deg);
        }
    }

    .table-container {
        border: 1px solid var(--glass-border);
        border-radius: 10px;
        overflow: hidden;
        margin-top: 1rem;
        background: rgba(0,0,0,0.2);
        max-height: 400px;
        overflow-y: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #cbd5e1;
    }

        /* FIX: Changed background to solid color (#050507) to prevent transparency glitch when scrolling */
        .custom-table th {
            background: #050507;
            padding: 12px;
            text-align: left;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: sticky;
            top: 0;
            z-index: 2;
            border-bottom: 1px solid var(--glass-border);
        }

        .custom-table td {
            padding: 12px;
            border-top: 1px solid var(--glass-border);
        }

    /* Section Heading Style */
    h5.section-title {
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 2rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
</style>

<div class="bg-light-source"></div>

<svg class="bg-vector-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
    <circle cx="12" cy="12" r="3"></circle>
    <path d="M12 22v-5"></path>
</svg>

<div class="shape-triangle"></div>

<div id="toastContainer" class="toast-container">
    <div id="toastMessage" class="toast-message">
        <span id="toastIcon" style="font-size: 1.4em;"></span>
        <div>
            <div style="font-weight: 600; font-size: 0.85em; text-transform: uppercase; letter-spacing: 1px; color: #94a3b8;">System Notification</div>
            <div id="toastText" style="font-size: 0.95em;"></div>
        </div>
    </div>
</div>

<div class="container mt-5 pb-5 mb-5">

    <div class="d-flex align-items-end justify-content-between mb-5 border-bottom border-secondary border-opacity-25 pb-3">
        <div>
            <h2 class="display-5 fw-bold mb-0" style="background: linear-gradient(90deg, #fff, #94a3b8); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">ADMIN CONSOLE</h2>
            <span class="text-secondary" style="font-family: monospace; letter-spacing: 2px;">SYSTEM_V.2.0 // FULL_ACCESS</span>
        </div>

        <div class="d-flex gap-3 align-items-center">
            <form method="post" asp-page-handler="Logout" class="m-0">
                <button class="btn btn-glassy btn-glassy-danger">🔒 Logout</button>
            </form>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="glass-card">
                <div class="glass-header">
                    <div><span style="color: var(--accent-aqua);">📊</span> DATA VISUALIZATION</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <div class="d-flex gap-3 mb-4">
                        <form method="post" asp-page-handler="ViewYesterdayAttendance" class="retain-scroll ajax-form">
                            <button class="btn btn-glassy btn-glassy-primary">Fetch Yesterday's Attendance</button>
                        </form>
                        <form method="post" asp-page-handler="ViewWinterPerformance" class="retain-scroll ajax-form">
                            <button class="btn btn-glassy">Fetch Winter Performance</button>
                        </form>
                    </div>

                    <div id="attendanceTableContainer" class="table-container hidden-table mb-3" style="display:none;">
                        <table class="custom-table">
                            <thead><tr><th>ID</th><th>Date</th><th>Status</th><th>In</th><th>Out</th></tr></thead>
                            <tbody id="attendanceTableBody"></tbody>
                        </table>
                    </div>
                    <div id="performanceTableContainer" class="table-container hidden-table mb-4" style="display:none;">
                        <table class="custom-table">
                            <thead><tr><th>ID</th><th>Sem</th><th>Rating</th><th>Comments</th></tr></thead>
                            <tbody id="performanceTableBody"></tbody>
                        </table>
                    </div>

                    <h5 class="section-title">All Employee Profiles</h5>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Years Exp.</th>
                                            <th>Day Off</th>
                                            <th>Contract</th>
                                            <th>Status</th>
                                            <th>Annual Bal</th>
                                            <th>Accidental Bal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var e in Model.Employees) {
                                        <tr>
                                            <td><span class="badge bg-transparent border border-secondary text-light">@e.EmployeeId</span></td>
                                            <td>@e.FirstName @e.LastName</td>
                                            <td>@e.Gender</td>
                                            <td>@e.Email</td>
                                            <td>@e.Address</td>
                                            <td>@e.YearsOfExperience</td>
                                            <td>@e.OfficialDayOff</td>
                                            <td>@e.TypeOfContract</td>
                                            <td>@e.EmploymentStatus</td>
                                            <td>@e.AnnualBalance</td>
                                            <td>@e.AccidentalBalance</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <h5 class="section-title">Employees Per Department</h5>
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Department</th><th>Count</th></tr></thead>
                                    <tbody>
                                        @foreach (var d in Model.DeptCounts) {
                                        <tr><td>@d.Department</td><td>@d.NumberOfEmployees</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="section-title">Rejected Medical Leaves</h5>
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead><tr><th>Req ID</th><th>Emp ID</th><th>Reason</th></tr></thead>
                                    <tbody>
                                        @foreach (var l in Model.RejectedMedicalLeaves) {
                                        <tr><td>@l.RequestId</td><td>@l.EmpId</td><td>@l.DisabilityDetails</td></tr>
 }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 align-items-start mb-5">
        <div class="col-md-6">
            <div class="glass-card">
                <div class="glass-header" style="border-left: 3px solid #ef4444;">
                    <div><span style="color: #ef4444;">⚙️</span> SYSTEM MAINTENANCE</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <div class="d-flex gap-2 mb-3">
                        <form method="post" asp-page-handler="InitAttendance" class="ajax-form w-50">
                            <button class="btn btn-glassy btn-glassy-primary w-100">Init Daily Attendance</button>
                        </form>
                        <form method="post" asp-page-handler="RemoveDeductions" class="ajax-form w-50">
                            <button class="btn btn-glassy btn-glassy-danger w-100">Remove Deductions</button>
                        </form>
                    </div>

                    <form method="post" asp-page-handler="RemoveHolidayAttendance" class="mb-4 ajax-form">
                        <button class="btn btn-glassy w-100" style="color: #fca5a5; border-color: rgba(239, 68, 68, 0.3);">Clean Holiday Records</button>
                    </form>

                    <hr style="border-color: rgba(255,255,255,0.1);" />

                    <form method="post" asp-page-handler="AddHoliday" class="ajax-form">
                        <label class="text-secondary small mb-2">ADD NEW HOLIDAY</label>
                        <input type="text" asp-for="HolidayName" class="form-control mb-2" placeholder="Holiday Name" required />
                        <div class="row g-2 mb-2">
                            <div class="col"><input type="date" asp-for="FromDate" class="form-control" required /></div>
                            <div class="col"><input type="date" asp-for="ToDate" class="form-control" required /></div>
                        </div>
                        <button class="btn btn-glassy btn-glassy-primary w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="glass-card">
                <div class="glass-header" style="border-left: 3px solid var(--accent-aqua);">
                    <div><span style="color: var(--accent-aqua);">👥</span> HR OPERATIONS</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <form method="post" asp-page-handler="UpdateDailyStatus" class="ajax-form mb-4">
                        <label class="text-secondary small mb-2">DAILY STATUS UPDATE</label>
                        <div class="input-group">
                            <input type="number" asp-for="TargetEmployeeId" class="form-control" placeholder="Emp ID..." min="1" required />
                            <button class="btn btn-glassy">Update</button>
                        </div>
                    </form>

                    <form method="post" asp-page-handler="UpdateAttendance" class="ajax-form mb-4">
                        <label class="text-secondary small mb-2">MANUAL ATTENDANCE LOG</label>
                        <input type="number" asp-for="TargetEmployeeId" class="form-control mb-2" placeholder="Emp ID" min="1" required />
                        <div class="row g-2 mb-2">
                            <div class="col"><input type="time" asp-for="CheckIn" class="form-control" required /></div>
                            <div class="col"><input type="time" asp-for="CheckOut" class="form-control" required /></div>
                        </div>
                        <button class="btn btn-glassy w-100">Update</button>
                    </form>

                    <hr style="border-color: rgba(255,255,255,0.1);" />

                    <form method="post" class="ajax-form mb-3">
                        <label class="text-secondary small mb-2">ANOMALY FIX (REQ ID)</label>
                        <div class="input-group mb-2">
                            <input type="number" asp-for="TargetEmployeeId" class="form-control" placeholder="Target ID..." min="1" required />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" asp-page-handler="RemoveUnattendedDayOff" class="btn btn-glassy w-50">Remove DayOff</button>
                            <button type="submit" asp-page-handler="RemoveApprovedLeaves" class="btn btn-glassy w-50">Remove Leaves</button>
                        </div>
                    </form>

                    <form method="post" asp-page-handler="ReplaceEmployee" class="ajax-form">
                        <label class="text-secondary small mb-2">REPLACE POSITION</label>
                        <div class="row g-2 mb-2">
                            <div class="col"><input type="number" name="TargetEmployeeId" class="form-control" placeholder="Old ID" min="1" required  /></div>
                            <div class="col"><input type="number" asp-for="NewEmployeeId" class="form-control" placeholder="New ID" min="1" required /></div>
                        </div>
                        <button class="btn btn-glassy btn-glassy-primary w-100">Replace Employee</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        // --- TOGGLE LOGIC ---
        const toggleButtons = document.querySelectorAll('.toggle-btn');
        toggleButtons.forEach(btn => {
            btn.addEventListener('click', function () {
                const card = this.closest('.glass-card');
                const body = card.querySelector('.glass-body');
                if (body.classList.contains('collapsed')) {
                    body.classList.remove('collapsed');
                    this.innerHTML = '➖';
                } else {
                    body.classList.add('collapsed');
                    this.innerHTML = '➕';
                }
            });
        });

        // --- AJAX HANDLER (No Reload) ---
        const ajaxForms = document.querySelectorAll('.ajax-form');
        ajaxForms.forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                const url = this.action;

                let finalUrl = url;
                if (e.submitter && e.submitter.hasAttribute('formaction')) {
                    finalUrl = e.submitter.getAttribute('formaction');
                }

                const formData = new FormData(this);

                fetch(finalUrl, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.type === 'data') {
                            if (data.category === 'attendance') renderAttendance(data.data);
                            if (data.category === 'performance') renderPerformance(data.data);
                            showToast(true, "Data retrieved.");
                        } else {
                            showToast(data.success, data.message);
                        }
                    })
                    .catch(error => showToast(false, "Error: " + error));
            });
        });

        function renderAttendance(data) {
            const tbody = document.getElementById('attendanceTableBody');
            const container = document.getElementById('attendanceTableContainer');
            tbody.innerHTML = '';
            data.forEach(r => {
                const date = r.date ? new Date(r.date).toLocaleDateString() : '-';
                tbody.innerHTML += `<tr><td><span class="badge bg-transparent border border-secondary">${r.empId}</span></td><td>${date}</td><td>${r.status}</td><td>${r.checkInTime || '-'}</td><td>${r.checkOutTime || '-'}</td></tr>`;
            });
            container.style.display = 'block';
        }

        function renderPerformance(data) {
            const tbody = document.getElementById('performanceTableBody');
            const container = document.getElementById('performanceTableContainer');
            tbody.innerHTML = '';
            data.forEach(r => {
                tbody.innerHTML += `<tr><td><span class="badge bg-transparent border border-secondary">${r.empId}</span></td><td>${r.semester}</td><td style="color:#fbbf24">${r.rating} ★</td><td>${r.comments || '-'}</td></tr>`;
            });
            container.style.display = 'block';
        }

        function showToast(isSuccess, message) {
            const container = document.getElementById('toastContainer');
            const toast = document.getElementById('toastMessage');
            const icon = document.getElementById('toastIcon');
            const text = document.getElementById('toastText');

            icon.innerHTML = isSuccess ? "⚡" : "❌";
            text.textContent = message;
            toast.className = 'toast-message ' + (isSuccess ? 'success' : 'error');
            container.style.display = 'block';
            setTimeout(() => { container.style.display = 'none'; }, 4000);
        }
    });
</script>
@page
@model Guc_Uni_System.Pages.Admin.AdminPartTwoModel
@{
    ViewData["Title"] = "Admin Component - Part 2";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&display=swap" rel="stylesheet">

<style>
    /* --- Global Theme Variables --- */
    :root {
        --bg-color: #050507;
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --accent-aqua: #06b6d4;
        --accent-blue: #3b82f6;
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
        --glass-hover-bg: rgba(255, 255, 255, 0.07);
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        min-height: 100vh;
        position: relative;
    }

    /* --- BACKGROUND ELEMENTS --- */
    .bg-light-source {
        position: fixed;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 900px;
        height: 900px;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.15) 0%, rgba(0,0,0,0) 60%);
        border-radius: 50%;
        pointer-events: none;
        z-index: -2;
        filter: blur(60px);
    }

    .bg-vector-icon {
        position: fixed;
        top: 20%;
        right: -5%;
        width: 600px;
        height: 600px;
        opacity: 0.03;
        z-index: -3;
        pointer-events: none;
        transform: rotate(-10deg);
    }

    .shape-triangle {
        position: absolute;
        top: 20%;
        right: 10%;
        width: 0;
        height: 0;
        border-left: 100px solid transparent;
        border-right: 100px solid transparent;
        border-bottom: 170px solid rgba(139, 92, 246, 0.05);
        filter: blur(2px);
        transform: rotate(15deg);
        animation: float 10s ease-in-out infinite;
        z-index: -3;
    }

    /* --- GLASSY BUTTONS --- */
    .btn-glassy {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.8);
        padding: 0.7rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .btn-glassy:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.3);
        }

    .btn-glassy-danger {
        border-color: rgba(239, 68, 68, 0.3);
        color: #fca5a5;
    }

        .btn-glassy-danger:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: #ef4444;
            color: white;
        }

    .btn-glassy-primary {
        border-color: rgba(6, 182, 212, 0.3);
        color: #a5f3fc;
    }

        .btn-glassy-primary:hover {
            background: rgba(6, 182, 212, 0.15);
            border-color: var(--accent-aqua);
            color: white;
        }

    /* --- COLLAPSE ANIMATION (FASTER) --- */
    .glass-body {
        padding: 1.5rem;
        transition: all 0.25s ease-out; /* Reduced from 0.4s to 0.25s */
        max-height: 2000px;
        opacity: 1;
        overflow: hidden;
    }

        .glass-body.collapsed {
            max-height: 0;
            padding-top: 0;
            padding-bottom: 0;
            opacity: 0;
            border: none;
        }

    /* --- TOAST & CARDS --- */
    .toast-container {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10000;
        display: none;
    }

    .toast-message {
        background: rgba(5, 5, 5, 0.95);
        border: 1px solid rgba(255,255,255,0.15);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        gap: 15px;
        min-width: 320px;
        animation: slideDown 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .toast-message.success {
            border-left: 4px solid #10b981;
        }

        .toast-message.error {
            border-left: 4px solid #ef4444;
        }

    .glass-card {
        background: var(--glass-bg);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        height: auto; /* Changed from 100% to auto */
        transition: border-color 0.3s ease;
        display: flex;
        flex-direction: column;
    }

        .glass-card:hover {
            border-color: rgba(255,255,255,0.2);
        }

    .glass-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--glass-border);
        background: rgba(255,255,255,0.02);
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: var(--text-primary);
    }

    .form-control {
        background: rgba(0, 0, 0, 0.6) !important;
        border: 1px solid var(--glass-border) !important;
        color: white !important;
        border-radius: 8px;
        padding: 0.6rem 1rem;
    }

        .form-control:focus {
            border-color: var(--accent-aqua) !important;
            box-shadow: 0 0 0 2px rgba(6, 182, 212, 0.15);
        }

    /* Animations */
    @@keyframes slideDown {
        from {
            transform: translateY(-30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(15deg);
        }

        50% {
            transform: translateY(-20px) rotate(20deg);
        }
    }

    .table-container {
        border: 1px solid var(--glass-border);
        border-radius: 10px;
        overflow: hidden;
        margin-top: 1rem;
        background: rgba(0,0,0,0.2);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #cbd5e1;
    }

        .custom-table th {
            background: rgba(255,255,255,0.05);
            padding: 12px;
            text-align: left;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .custom-table td {
            padding: 12px;
            border-top: 1px solid var(--glass-border);
        }
</style>

<div class="bg-light-source"></div>

<svg class="bg-vector-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
    <circle cx="12" cy="12" r="3"></circle>
    <path d="M12 22v-5"></path>
</svg>

<div class="shape-triangle"></div>

<div id="toastContainer" class="toast-container">
    <div id="toastMessage" class="toast-message">
        <span id="toastIcon" style="font-size: 1.4em;"></span>
        <div>
            <div style="font-weight: 600; font-size: 0.85em; text-transform: uppercase; letter-spacing: 1px; color: #94a3b8;">System Notification</div>
            <div id="toastText" style="font-size: 0.95em;"></div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
<div id="server-toast-data" data-success="@Model.IsSuccess.ToString().ToLower()" data-message="@Model.Message" style="display:none;"></div>
}

<div class="container mt-5 pb-5">
    <div class="mb-5 border-bottom border-secondary border-opacity-25 pb-3">
        <h2 class="display-5 fw-bold" style="background: linear-gradient(90deg, #fff, #94a3b8); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">ADMIN CONSOLE</h2>
        <span class="text-secondary" style="font-family: monospace; letter-spacing: 2px;">V.2.0 // CONTROL_PANEL</span>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="glass-card">
                <div class="glass-header">
                    <div><span style="color: var(--accent-aqua);">📊</span> DATA VISUALIZATION</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <div class="d-flex gap-3 mb-4">
                        <form method="post" asp-page-handler="ViewYesterdayAttendance" class="retain-scroll">
                            <button class="btn btn-glassy btn-glassy-primary">Fetch Yesterday's Attendance</button>
                        </form>
                        <form method="post" asp-page-handler="ViewWinterPerformance" class="retain-scroll">
                            <button class="btn btn-glassy">Fetch Winter Performance</button>
                        </form>
                    </div>

                    @if (Model.AttendanceRecords != null && Model.AttendanceRecords.Any())
                    {
                    <div class="table-container">
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th>Emp ID</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Check In</th>
                                    <th>Check Out</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.AttendanceRecords)
                                {
                                <tr>
                                    <td><span class="badge bg-transparent border border-secondary text-light">@record.EmpId</span></td>
                                    <td>@(record.Date.HasValue ? record.Date.Value.ToShortDateString() : "-")</td>
                                    <td>@record.Status</td>
                                    <td>@record.CheckInTime</td>
                                    <td>@record.CheckOutTime</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    }

                    @if (Model.PerformanceRecords != null && Model.PerformanceRecords.Any())
                    {
                    <div class="table-container">
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th>Emp ID</th>
                                    <th>Semester</th>
                                    <th>Rating</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.PerformanceRecords)
                                {
                                <tr>
                                    <td><span class="badge bg-transparent border border-secondary text-light">@record.EmpId</span></td>
                                    <td>@record.Semester</td>
                                    <td style="color: #fbbf24;">@record.Rating ★</td>
                                    <td>@record.Comments</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 align-items-start mb-5">

        <div class="col-md-6">
            <div class="glass-card">
                <div class="glass-header" style="border-left: 3px solid #ef4444;">
                    <div><span style="color: #ef4444;">⚙️</span> MAINTENANCE OPS</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <form method="post" asp-page-handler="RemoveHolidayAttendance" class="mb-4 retain-scroll">
                        <label class="text-secondary small mb-2">HOLIDAY CLEANUP</label>
                        <button class="btn btn-glassy btn-glassy-danger w-100">Execute Cleanup</button>
                    </form>

                    <hr style="border-color: rgba(255,255,255,0.1);" />

                    <form method="post" asp-page-handler="UpdateDailyStatus" class="retain-scroll">
                        <label class="text-secondary small mb-2">STATUS UPDATE</label>
                        <div class="input-group">
                            <input type="number" asp-for="TargetEmployeeId" class="form-control" placeholder="Target ID..." required />
                            <button class="btn btn-glassy btn-glassy-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="glass-card">
                <div class="glass-header" style="border-left: 3px solid var(--accent-aqua);">
                    <div><span style="color: var(--accent-aqua);">👥</span> HR MANAGEMENT</div>
                    <button class="btn btn-sm btn-glassy toggle-btn" style="padding: 0.2rem 0.6rem;">➖</button>
                </div>
                <div class="glass-body">
                    <form method="post" class="mb-4 retain-scroll">
                        <label class="text-secondary small mb-2">ANOMALY CORRECTION</label>
                        <div class="input-group mb-3">
                            <input type="number" asp-for="TargetEmployeeId" class="form-control" placeholder="Employee ID..." required />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" asp-page-handler="RemoveUnattendedDayOff" class="btn btn-glassy w-50">Remove DayOff</button>
                            <button type="submit" asp-page-handler="RemoveApprovedLeaves" class="btn btn-glassy w-50">Remove Leaves</button>
                        </div>
                    </form>

                    <form method="post" asp-page-handler="ReplaceEmployee" class="retain-scroll">
                        <label class="text-secondary small mb-2">POSITION REPLACEMENT</label>
                        <div class="row g-2 mb-2">
                            <div class="col">
                                <input type="number" name="TargetEmployeeId" class="form-control" placeholder="Current ID" required />
                            </div>
                            <div class="col">
                                <input type="number" asp-for="NewEmployeeId" class="form-control" placeholder="New ID" required />
                            </div>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col"><input type="date" asp-for="FromDate" class="form-control" required /></div>
                            <div class="col"><input type="date" asp-for="ToDate" class="form-control" required /></div>
                        </div>
                        <button class="btn btn-glassy btn-glassy-primary w-100">Confirm Replacement</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        // --- NEW INDIVIDUAL TOGGLE LOGIC ---
        const toggleButtons = document.querySelectorAll('.toggle-btn');

        toggleButtons.forEach(btn => {
            btn.addEventListener('click', function () {
                // Find the closest card container
                const card = this.closest('.glass-card');
                // Find the body inside that card
                const body = card.querySelector('.glass-body');

                // Toggle collapsed state
                if (body.classList.contains('collapsed')) {
                    body.classList.remove('collapsed');
                    this.innerHTML = '➖';
                } else {
                    body.classList.add('collapsed');
                    this.innerHTML = '➕';
                }
            });
        });

        // --- EXISTING SCROLL & TOAST LOGIC ---

        // 1. Restore scroll position
        var scrollPos = localStorage.getItem('scrollPos');
        if (scrollPos) window.scrollTo(0, scrollPos);

        const retainForms = document.querySelectorAll('.retain-scroll');
        retainForms.forEach(form => {
            form.addEventListener('submit', () => {
                localStorage.setItem('scrollPos', window.scrollY);
            });
        });

        // 2. SHOW TOAST from Server Data
        const serverData = document.getElementById('server-toast-data');
        if (serverData) {
            const isSuccess = serverData.getAttribute('data-success') === 'true';
            const message = serverData.getAttribute('data-message');
            showToast(isSuccess, message);
        }

        function showToast(isSuccess, message) {
            const container = document.getElementById('toastContainer');
            const toast = document.getElementById('toastMessage');
            const icon = document.getElementById('toastIcon');
            const text = document.getElementById('toastText');

            icon.innerHTML = isSuccess ? "⚡" : "❌";
            text.textContent = message;
            toast.className = 'toast-message ' + (isSuccess ? 'success' : 'error');

            container.style.display = 'block';

            setTimeout(() => {
                container.style.display = 'none';
            }, 4000);
        }
    });

    window.onbeforeunload = function (e) {
        localStorage.setItem('scrollPos', window.scrollY);
    };
</script>